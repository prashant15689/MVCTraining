@model IEnumerable<MVCTrainingProject.Models.Employees>

@for (int index = 0; index < Model.Count(); index++)
{
    <tr>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(index).EmpName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(index).Email)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(index).Phone)
        </td>
        <td>
            @Html.DisplayFor(modelItem => Model.ElementAt(index).Address)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = Model.ElementAt(index).Id }, 
           new { @class = "btn btn-warning" }) |
            @Html.ActionLink("Delete", "Delete", new { id = Model.ElementAt(index).Id },
           new { @onclick = "return confirm(\"Are you sure to delete this employee?\")",
               @class="btn btn-danger"})
        </td>
    </tr>
}
